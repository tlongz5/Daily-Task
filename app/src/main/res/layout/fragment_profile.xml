<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="32dp">

        <ImageView
            android:id="@+id/bgr_cycle"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/bg_orange" />

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Profile"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginStart="18dp"
            android:src="@android:drawable/ic_menu_revert"
            app:layout_constraintBottom_toBottomOf="@+id/tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/btn_edit"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginEnd="18dp"
            android:src="@drawable/ic_setting_setting"
            app:layout_constraintBottom_toBottomOf="@+id/tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv"
            app:tint="@color/white" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSave"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:backgroundTint="@color/light_orange"
                app:strokeColor="@color/orange_main"
                android:layout_marginEnd="18dp"
                app:layout_constraintBottom_toBottomOf="@+id/tv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv"
                app:strokeWidth="1dp"
                android:text="Save"
                android:textSize="22dp"
                android:textColor="@color/orange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:padding="12dp" />


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/materialCardView2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:cardCornerRadius="60dp"
            app:cardElevation="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/bgr_cycle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bgr_cycle"
            app:strokeColor="#FFFFFF"
            android:transitionName="avatar"
            app:strokeWidth="4dp">
            <ImageView
                android:id="@+id/avatar"
                android:layout_width="135dp"
                android:layout_height="120dp"
                android:padding="4dp"
                android:scaleType="centerCrop"
                tools:srcCompat="@drawable/avatar1" />
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tvName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thanh Long"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:textSize="28dp"
            app:layout_constraintEnd_toEndOf="@+id/materialCardView2"
            app:layout_constraintStart_toStartOf="@+id/materialCardView2"
            app:layout_constraintTop_toBottomOf="@+id/materialCardView2" />

        <TextView
            android:id="@+id/tvEditBin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit your details below"
            android:textColor="@color/light_black_hint"
            android:layout_marginTop="4dp"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="@+id/tvName2"
            app:layout_constraintStart_toStartOf="@+id/tvName2"
            app:layout_constraintTop_toBottomOf="@+id/tvName2" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingBottom="40dp"
            app:layout_constraintTop_toBottomOf="@+id/tvEditBin">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Full Name"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/orange"
                android:letterSpacing="0.1"/>
            <EditText
                android:id="@+id/edt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp"
                android:background="@null"
                android:drawableStart="@drawable/ic_setting_name"
                android:drawablePadding="12dp"
                android:text="Thanh Long"
                android:focusable="false"
                android:textStyle="bold"
                android:textColor="@color/light_black"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:layout_marginTop="16dp"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/orange"
                android:letterSpacing="0.1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="12dp"
                    android:drawableStart="@drawable/ic_make_new_friend"
                    android:drawablePadding="12dp"
                    android:text="\@"
                    android:focusable="false"
                    android:textStyle="bold"
                    android:textColor="@color/light_black"
                    android:textSize="16sp"/>
                <EditText
                    android:id="@+id/edt_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="12dp"
                    android:background="@null"
                    android:text="tlongz5"
                    android:focusable="false"
                    android:textStyle="bold"
                    android:textColor="@color/light_black"
                    android:textSize="16sp"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Email"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/orange"
                android:letterSpacing="0.1"/>
            <EditText
                android:id="@+id/edt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp"
                android:background="@null"
                android:drawableStart="@drawable/ic_setting_email"
                android:drawablePadding="12dp"
                android:text="long26102005@gmail.com"
                android:focusable="false"
                android:textStyle="bold"
                android:textColor="@color/light_black_hint"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:layout_marginTop="16dp"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/orange"
                android:letterSpacing="0.1"/>
            <EditText
                android:id="@+id/edt_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp"
                android:background="@null"
                android:drawableStart="@drawable/ic_setting_phone"
                android:drawablePadding="12dp"
                android:text="0387920450"
                android:focusable="false"
                android:textStyle="bold"
                android:textColor="@color/light_black"
                android:textSize="16sp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_log_out"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="40dp"
                android:text="Log Out"
                android:textColor="@color/orange"
                android:textStyle="bold"
                app:cornerRadius="28dp"
                app:backgroundTint="#FFF5F5"
                app:strokeColor="@color/orange"
                app:strokeWidth="2dp"
                app:elevation="0dp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
