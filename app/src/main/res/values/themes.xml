<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.New" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="Theme.New" parent="Base.Theme.New" />

    <style name="TimePickerTheme" parent="ThemeOverlay.MaterialComponents.TimePicker">
        <item name="colorPrimary">@color/orange</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/light_black</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="elevationOverlayColor">@color/white</item>
        <item name="clockFaceBackgroundColor">@color/orange</item>
    </style>

    <style name="DatePickerTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/orange</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/light_black</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="elevationOverlayColor">@color/white</item>
    </style>

</resources>